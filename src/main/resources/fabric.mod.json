{
  "schemaVersion": 1,
  "id": "the_blue",
  "version": "${version}",

  "name": "TheBlue",
  "description": "Ocean themed additions. Made for a Spring 2020 Mod Fest.",

  "license": "none yet :)",
  "icon": "assets/the_blue/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "scala",
        "value": "io.github.rypofalem.the_blue.TheBlueMod"
      }
    ],
    "client": [
      {
        "adapter": "scala",
        "value": "io.github.rypofalem.the_blue.TheBlueClient"
      }
    ]
  },
  "mixins": [
    "the_blue.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.15.x"
  },
  "suggests": {
    "flamingo": "*"
  },
  "requires": {
    "fabric-language-scala": "*"
  }
}
